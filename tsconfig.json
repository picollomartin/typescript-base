{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": [
            "esnext",
            "dom",
            "es5",
            "es6"
        ],
        "module": "commonjs",
        "noUnusedLocals": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "esnext"
    },
    "include": [
        "./"
    ],
    "includes": [
        "**/*.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
